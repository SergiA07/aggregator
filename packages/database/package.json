{
  "name": "@repo/database",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "db:generate": "bunx --bun prisma generate",
    "db:push": "bunx --bun prisma db push",
    "db:migrate": "bunx --bun prisma migrate dev",
    "db:migrate:deploy": "bunx --bun prisma migrate deploy",
    "db:migrate:status": "bunx --bun prisma migrate status",
    "db:studio": "bunx --bun prisma studio"
  },
  "dependencies": {
    "@prisma/adapter-pg": "7.1.0",
    "@prisma/client": "7.1.0",
    "pg": "8.16.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "8.15.4",
    "prisma": "7.1.0"
  }
}
