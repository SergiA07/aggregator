{
  "permissions": {
    "allow": [
      "Bash(bun install)",
      "Bash(bun test:*)",
      "Bash(bun run:*)",
      "Bash(bunx biome:*)",
      "Bash(bunx supabase:*)",
      "Bash(bunx prisma:*)",
      "Bash(turbo:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(npx tsc:*)"
    ],
    "deny": ["Read(.env)", "Read(.env.*)", "Edit(.env)", "Edit(.env.*)"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "file_path=$(cat - | jq -r '.tool_input.file_path // empty') && if [ -n \"$file_path\" ] && [[ \"$file_path\" == *.ts || \"$file_path\" == *.tsx || \"$file_path\" == *.js || \"$file_path\" == *.json ]]; then bunx biome check --write \"$file_path\" 2>/dev/null || true; fi"
          }
        ]
      }
    ]
  }
}
