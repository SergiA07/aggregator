{
  "name": "my-aggregator-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "predev": "lsof -ti:3333,5173,8000 | xargs kill -9 2>/dev/null || true",
    "dev": "concurrently -n api,web,python -c blue,green,yellow \"turbo dev --filter=@repo/api\" \"turbo dev --filter=@repo/web\" \"cd apps/python-service && $HOME/.local/bin/uv run uvicorn main:app --reload --port 8000\"",
    "dev:api": "turbo dev --filter=@repo/api",
    "dev:web": "turbo dev --filter=@repo/web",
    "dev:python": "cd apps/python-service && $HOME/.local/bin/uv run uvicorn main:app --reload --port 8000",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:studio": "bun --filter=@repo/database prisma studio"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.4",
  "bun": {
    "lockfile": {
      "print": "yarn"
    }
  }
}