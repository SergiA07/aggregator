{
  "name": "my-aggregator-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "make dev",
    "dev:api": "turbo dev --filter=@repo/api",
    "dev:web": "turbo dev --filter=@repo/web",
    "dev:python": "cd apps/python-service && uv run uvicorn main:app --reload --port 8000",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:studio": "bun --filter=@repo/database prisma studio"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "latest",
    "turbo": "2.6.3",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.4",
  "bun": {
    "lockfile": {
      "print": "yarn"
    }
  }
}