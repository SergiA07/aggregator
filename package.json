{
  "name": "my-aggregator-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "make dev",
    "dev:api": "turbo dev --filter=@repo/api",
    "dev:web": "turbo dev --filter=@repo/web",
    "dev:python": "cd apps/python-service && uv run uvicorn main:app --reload --port 8000",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:migrate:deploy": "turbo db:migrate:deploy",
    "db:migrate:status": "turbo db:migrate:status",
    "db:studio": "turbo db:studio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@commitlint/types": "20.2.0",
    "@playwright/test": "1.57.0",
    "@types/bun": "1.3.5",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "turbo": "2.7.2",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.4",
  "bun": {
    "lockfile": {
      "print": "yarn"
    }
  },
  "dependencies": {
    "@fastify/helmet": "13.0.2",
    "@nestjs/throttler": "6.5.0"
  }
}
