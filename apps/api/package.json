{
  "name": "@repo/api",
  "version": "0.0.1",
  "description": "Portfolio Aggregator API",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "dev": "NODE_OPTIONS='--require dotenv/config' DOTENV_CONFIG_PATH=../../.env tsx watch src/main.ts",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "biome check src/",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/compress": "8.3.0",
    "@fastify/cors": "11.2.0",
    "@fastify/multipart": "9.3.0",
    "@fastify/static": "8.3.0",
    "@nestjs/common": "11.1.9",
    "@nestjs/core": "11.1.9",
    "@nestjs/platform-fastify": "11.1.9",
    "@nestjs/swagger": "11.2.3",
    "@repo/database": "workspace:*",
    "@supabase/supabase-js": "2.87.2",
    "csv-parse": "5.6.0",
    "fastify": "5.6.2",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "yahoo-finance2": "2.14.0"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.14",
    "@nestjs/schematics": "11.0.0",
    "@nestjs/testing": "11.1.9",
    "@types/jest": "30.0.0",
    "@types/node": "22.10.7",
    "@types/supertest": "6.0.2",
    "dotenv": "17.2.3",
    "jest": "30.2.0",
    "pino-pretty": "13.0.0",
    "source-map-support": "0.5.21",
    "supertest": "7.1.4",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}