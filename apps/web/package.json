{
  "name": "@repo/web",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:mock": "VITE_MOCK_API=true vite",
    "build": "tsc -b && vite build",
    "lint": "biome check src/",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
