{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", "tsconfig.json", "biome.json"],
  "globalEnv": [
    "NODE_ENV",
    "AUTH_DEV_BYPASS",
    "DATABASE_URL",
    "SUPABASE_URL",
    "SUPABASE_PUBLISHABLE_KEY",
    "SUPABASE_SECRET_KEY",
    "PYTHON_SERVICE_URL",
    "VITE_API_URL",
    "VITE_SUPABASE_URL",
    "VITE_SUPABASE_PUBLISHABLE_KEY",
    "PORT",
    "FRONTEND_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "tsconfig.*.json",
        "vite.config.ts",
        "nest-cli.json"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.css",
        "$TURBO_DEFAULT$"
      ],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["@repo/database#build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "tsconfig.*.json",
        "$TURBO_DEFAULT$"
      ],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "test/**", "jest.config.*", "$TURBO_DEFAULT$"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": ["test/**", "src/**", "$TURBO_DEFAULT$"],
      "outputs": []
    },
    "db:generate": {
      "cache": false,
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["src/generated/**"]
    },
    "db:push": {
      "cache": false,
      "inputs": ["prisma/schema.prisma"],
      "outputs": []
    },
    "db:migrate": {
      "cache": false,
      "inputs": ["prisma/schema.prisma", "prisma/migrations/**"],
      "outputs": []
    },
    "db:migrate:deploy": {
      "cache": false,
      "inputs": ["prisma/migrations/**"],
      "outputs": []
    },
    "db:migrate:status": {
      "cache": false,
      "outputs": []
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
